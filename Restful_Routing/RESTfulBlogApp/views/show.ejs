<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img src="<%= blog.image %>"  class="ui centered rounded image" />
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
                <a href="/blogs/<%= blog._id %>/edit" class="ui orange basic button">Edit</a>
                <form id="deleteForm" class="ui form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <input class="ui red basic button" type="submit" value="Delete"/>
                </form>
            </div>
        </div>
    </div>
    
</div>

<% include partials/footer %>